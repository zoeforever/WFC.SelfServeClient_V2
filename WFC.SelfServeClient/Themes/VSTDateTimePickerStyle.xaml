    <ControlTemplate x:Key="DateTimePickerTemplate" TargetType="{x:Type controls:DateTimePicker}">
        <Border x:Name="bdr" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}"
                CornerRadius="1" Margin="0" Padding="{TemplateBinding Padding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" MinWidth="50"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <CheckBox Name="checkBox" VerticalAlignment="Center" Margin="3,0,0,0" Background="Transparent" Foreground="{TemplateBinding Foreground}" />
                <TextBox Name="textBox" Style="{x:Null}" Grid.Column="1" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3,0" Background="Transparent" Foreground="Black"/>
                <TextBlock Grid.Column="2" Foreground="{TemplateBinding Foreground}" Name="textBlock" Background="{StaticResource CalendarIcon}" Width="15" Text="" VerticalAlignment="Center" Margin="0,0,3,0"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="BorderBrush" Value="{StaticResource ControlBorderMouseOver}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="false" >
                <Setter Property="Foreground" Value="{StaticResource ControlForegoundColorDisabled}" />
                <Setter Property="Background" Value="{StaticResource ControlBackgroundDisabled}" />
                <Setter Property="BorderBrush" Value="{StaticResource ControlBorderDisabled}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="{x:Type controls:DateTimePicker}" x:Key="VstDatetimePickerStyle">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="{StaticResource ControlDarkBackground}" />
        <Setter Property="BorderBrush" Value="#A2BACB" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Height" Value="23" />
    </Style>

    <Style TargetType="{x:Type controls:DateTimePicker}" BasedOn="{StaticResource VstDatetimePickerStyle}" />

</ResourceDictionary>